<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">
    <style name="CandidateText">
        <item name="android:background">@drawable/candidate_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">@dimen/softkey_height</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/key_foreground</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="SymbolText">
        <item name="android:background">@drawable/symbol_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/softkey_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">@dimen/softkey_height</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/key_foreground</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>